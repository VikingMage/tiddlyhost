#!/bin/bash

certbot certonly \
  --config-dir {{ certbot_dir_config }} \
  --work-dir {{ certbot_dir_work }} \
  --logs-dir {{ certbot_dir_logs }} \
  -d {{ cert_host }} -d *.{{ cert_host }} \
  -d {{ extra_cert_host }} -d *.{{ extra_cert_host }} \
  --dns-route53 \
  -n --agree-tos -m {{ certbot_notification_email }}
